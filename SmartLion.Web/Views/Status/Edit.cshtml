@{
    ViewBag.Title = "Status : Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model SmartLion.Web.Models.StatusModel
<div class="row">
    <h3 class="page-header">
        Status Management
    </h3>
</div>
<div class="row">
    @using (Html.BeginForm("Edit", "Status", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
         <div class="form-group">
            <label class="col-sm-2 control-label">
                Status Name:</label>
            <div class="col-sm-2">
                @Html.TextBoxFor(model => model.Status, new { @class = "form-control", @placeholder = "Status Name" })
            </div>
            <div class="col-sm-3">
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <input type="submit" name="actionType" value="Save" class="btn btn-primary"></input>
                <a href="@Url.Action("Index", "Status")" class="btn btn-default" role="button">Cancel</a>
            </div>
        </div>
    }
</div>

